<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.co.bit.osf.projectlab.ImageUtilActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image List"
            android:id="@+id/btnGetImageList" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Album List"
            android:id="@+id/btnGetAlbumList" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Uri"
            android:id="@+id/btnGetOutputMediaFileUri" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageListView"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
</RelativeLayout>
